<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.imf.picdia.Answer">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/photoView"
        android:layout_above="@+id/CH" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:id="@+id/repeat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/repeat"
        android:layout_toLeftOf="@+id/retry"
        android:layout_toStartOf="@+id/retry" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:id="@+id/retry"
        android:layout_below="@+id/EN"
        android:layout_centerHorizontal="true"
        android:src="@drawable/camara" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:id="@+id/back"
        android:layout_below="@+id/EN"
        android:layout_alignRight="@+id/EN"
        android:layout_alignEnd="@+id/EN"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="英文:"
        android:id="@+id/EN"
        android:textSize="24dp"
        android:layout_above="@+id/repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="中文:"
        android:id="@+id/CH"
        android:textSize="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/EN" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:id="@+id/ab_button"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />
</RelativeLayout>
